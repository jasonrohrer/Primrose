#!/bin/sh

#
# Modification History
#
# 2007-November-12    Jason Rohrer
# Copied from Cultivation.
#


cd PrimroseSource
chmod u+x ./configure
./configure

cd gameSource


echo "Building Primrose..."

make



cd ../..

mkdir graphics
mkdir settings

cp PrimroseSource/gameSource/Primrose ./Primrose
cp PrimroseSource/documentation/Readme.txt .
cp PrimroseSource/gameSource/graphics/* ./graphics

cp PrimroseSource/gameSource/settings/* ./settings

echo "Run Primrose to play."
